<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lilly.perry.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="160sp"
            android:paddingBottom="5sp"
            android:textSize="35sp"
            android:textColor="@color/burntorange"
            android:textAllCaps="true"
            android:text="Perry" />
        <Button android:id="@+id/add"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:background="@drawable/roundbutton"
            android:gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@id/text"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="+" />
        <TextView android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10sp"
            android:layout_toRightOf="@id/add"
            android:text="" />
        <Button android:id="@+id/help"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:background="@drawable/roundbutton"
            android:gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@id/text2"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="?" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="15sp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp">

        <Button android:id="@+id/Daily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/burntorange"
            android:textColor="@color/white"
            android:text="Daily" />
        <Button android:id="@+id/Weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/burntorange"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/Daily"
            android:text="Weekly" />
        <Button android:id="@+id/Monthly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Weekly"

            android:background="@color/burntorange"
            android:textColor="@color/white"
            android:text="Monthly" />
        <Button android:id="@+id/Yearly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Monthly"

            android:background="@color/burntorange"
            android:textColor="@color/white"
            android:text="Yearly" />
    </RelativeLayout>

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expandableListView"
        android:layout_gravity="right"
        android:choiceMode="singleChoice" />


</LinearLayout>

